#include <iostream>
#include <cmath>
#include <windows.h>
#include <stdlib.h>
#include <iomanip>
using namespace std;
//Дан двумерный массив размерностью n x m. Выполнить транспонирование данного массива.
const int n = 3;
const int m = 3;


void MatricEnter (int A[n][m], const int n, const int m);
void MatricOutput (int A[n][m], const int n, const int m);
void MatricTranspose (int A[n][m], const int n, const int m);

int main(){
 
SetConsoleCP(65001);
SetConsoleOutputCP(65001);

int A[n][m];

MatricEnter(A, n, m);
MatricOutput (A, n, m);
MatricTranspose (A, n, m);


 system("pause");
 return 0;
}


void MatricEnter(int A[n][m], const int n, const int m){
cout << "Введіть матрицю " << n <<  " x " << m << endl;

    cout << endl;

    for (int i = 0; i < n; i++)
    {

        for (int j = 0; j < m; j++)
        {
            cout << "A[" << i << j << "]: ";
            cin >> A[i][j];
        }

    }
}



void MatricOutput (int A[n][m], const int n, const int m){
cout << "Початкова матриця:" << endl;
   for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cout << A[i][j] << " | ";
        }
        cout << endl;
}
}

void MatricTranspose (int A[n][m], const int n, const int m){
cout << "Транспонована матриця:" << endl;
  
    
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cout << A[j][i] << " | ";
        }
        cout << endl;
}
}
