#include <iostream>
#include <cmath>
#include <windows.h>
using namespace std;

int main(){
//Даний фрагмент програми обчислює поліном в точці t з коефіцієнтами з масиву a
 
SetConsoleCP(65001);
SetConsoleOutputCP(65001);


int t = 3; 
int n = 3;
int a[] = {-13, -30, -19, 4};
int x = a[n];



for (int j = 0; j < n; j++){  
    x = x + a[j] * pow(t, n-j); 
}
cout << x << endl;




 system("pause");
}
