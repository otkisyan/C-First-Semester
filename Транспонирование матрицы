#include <iostream>
#include <cmath>
#include <windows.h>
#include <stdlib.h>
#include <iomanip>
using namespace std;
//Дан двумерный массив размерностью n x m. Выполнить транспонирование данного массива.

const int n = 3;
const int m = 3;

void MatrixFill (int A[n][m], const int n, const int m);
void MatrixOutput (int A[n][m], const int n, const int m);
void MatrixTranspose (int A[n][m], int B[n][m], const int n, const int m);

int main(){

SetConsoleCP(65001);
SetConsoleOutputCP(65001);
srand (time(NULL));

int A[n][m];
int B[n][m];

MatrixFill(A, n, m);
cout << "Початкова матриця" << endl;
MatrixOutput (A, n, m);
cout << endl;
MatrixTranspose (A, B, n, m);
cout << "Транспонована матриця" << endl;

MatrixOutput(B, n , m);

 system("pause");
 return 0;
}


void MatrixFill(int A[n][m], const int n, const int m){

for (int i = 0; i < n; i++)
{
    for (int j = 0; j < m ; j++)
    {
        A[i][j] = rand() % 100;
    }
    
}
}

void MatrixOutput (int A[n][m], const int n, const int m){

   for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cout << A[i][j] << " | ";
        }
        cout << endl;
}
}


void MatrixTranspose (int A[n][m], int B[n][m], const int n, const int m){
    
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
           B[i][j] = A[j][i];
           
        }
        
}
}


